<Window x:Class="WPFHello.MyMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHello"
        mc:Ignorable="d"
        Title="MyMessage" Height="450" Width="800">
    <Grid>
        <Label x:Name="txtlbl" Content="This is Windows Presentation Foundation!" HorizontalAlignment="Left" Margin="0,56,0,0" VerticalAlignment="Top" Height="148" Width="790" FontSize="36" RenderTransformOrigin="0.5,0.5" FontFamily="Cooper Black">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
